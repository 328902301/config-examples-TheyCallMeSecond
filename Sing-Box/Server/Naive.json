{
    "inbounds": [
        {
            "type": "naive",
            "tag": "naive-in",
            "listen": "::",
            "listen_port": PORT,
            "users": [
                {
                    "name": "NAME",
                    "password": "PASSWORD"
                }
            ],
            "tls": {
                "alpn": [
                    "h3"
                ],
                "enabled": true,
                "server_name": "DOMAIN",
                "certificate_path": "/etc/naive/server.crt",
                "key_path": "/etc/naive/server.key"
            }
        }
    ],
    "log": {
        "level": "warn",
        "timestamp": true
    },
    "outbounds": [
        {
            "tag": "direct",
            "type": "direct"
        }
    ]
}
