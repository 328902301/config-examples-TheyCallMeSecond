{
    "dns": {
        "servers": [
            {
                "address": "tls://1.1.1.1"
            }
        ]
    },
    "inbounds": [
        {
            "detour": "shadowsocks-in",
            "handshake": {
                "server": "SNI",
                "server_port": 443
            },
            "listen": "::",
            "listen_port": PORT,
            "strict_mode": true,
            "type": "shadowtls",
            "users": [
                {
                    "name": "NAME",
                    "password": "PASSWORD"
                }
            ],
            "version": 3
        },
        {
            "listen": "127.0.0.1",
            "method": "chacha20-ietf-poly1305",
            "network": "tcp",
            "password": "PASSWORD2",
            "tag": "shadowsocks-in",
            "type": "shadowsocks"
        }
    ],
    "log": {
        "disabled": true
    },
    "outbounds": [
        {
            "type": "direct"
        },
        {
            "tag": "dns-out",
            "type": "dns"
        }
    ],
    "route": {
        "rules": [
            {
                "outbound": "dns-out",
                "protocol": "dns"
            }
        ]
    }
}
